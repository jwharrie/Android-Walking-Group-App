<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">#F2EFE9</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#CFCFCF</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ActivityHeader" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:layout_marginTop">@dimen/smallMargin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorHeadings</item>
        <item name="android:textSize">@dimen/heading</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
