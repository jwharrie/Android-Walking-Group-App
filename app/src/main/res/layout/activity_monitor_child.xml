<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.cmpt276.walkinggroup.app.MonitorChildActivity"
    android:background="#904E55">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        tools:context="ca.cmpt276.walkinggroup.app.MonitorChildActivity">

        <TextView
            android:id="@+id/monitorChildHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="8dp"
            android:text="@string/txt_monitorChild"
            android:textColor="#F2EFE9" />

        <ListView
            android:id="@+id/monitorChildList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_addUser"
                android:layout_width="wrap_content"
                android:background="@drawable/button"
                android:layout_height="wrap_content"
                style="@style/ButtonStyle"
                android:text="@string/btn_add_user" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
